@model Movie



<div class="container-fluid mb-3 pb-5">
    <form method="post">
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-gradient" style="background-color:#334263">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3 class="text-white text-uppercase">@Model.Title</h3>
                        <p class="text-white-50 fw-semibold mb-0">by @Model.Director</p>
                    </div>
                </div>
            </div>
            <div class="card-body bg-gradient" style="background-color:#455a87">
                <div class="py-3">
                    <div class="row">
                        <div class="col-6 col-md-2 offset-lg-1 pb-1">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-info bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                                <small>Back to home</small>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                            <img src="@Model.CoverUrl" style="width:100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-6 offset-lg-1">

                            <div class="col-12 col-md-6 pb-4">
                                <span class="badge">Genre</span>
                            </div>
                            <div class="row pl-2 my-3">
                                <p class="lh-sm">@Model.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
