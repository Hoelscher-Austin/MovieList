@model List<Movie>


<div class="row pb-2 mb-5">

    @foreach (var movie in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card bg-gradient border-0 p-3 shadow border-top border-5 rounded-block" style="background-color:#455a87; height:fit-content">
                        <img src="@movie.CoverUrl" class="card-img-top rounded center"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 opacity-75 text-uppercase text-center">@movie.Title</p>
                                <p class="card-title text-warning text-center">Directed by<br><b>@movie.Director</b></p>
                            </div>
                            <a class="btn btn-info text-center form-control" asp-route-id="@movie.Id" asp-controller="Home" asp-action="Details">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

</div>
