@model List<Movie>


<div class="card shadow">

    <div class="card-header bg-gradient">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Movie List</h2>
            </div>
        </div>
    </div>
    
    <div class="card-body">

        <div class="row pb-3">
            <div class="col-12 text-end">
                <a asp-area="Admin" asp-controller="Movie" asp-action="Add" class="btn btn-outline-success">
                    <i class="bi bi-plus-circle"></i> Add Movie
                </a>
            </div>
        </div>

        <table class="table table-striped table-hover bg-gradient">
            <thead class="text-center">
                <tr class="table-primary">
                    <th>Title</th>
                    <th>Director</th>
                    <th>Year Released</th>
                    <th>Edit/Delete</th>
                </tr>
                </thead>
                <tbody class="table-primary">
            @foreach (var movie in Model.OrderBy(m => m.Title))
            {
                        <tr class="text-center">
                            <td>@movie.Title</td>
                            <td>@String.Format($"{movie.Director.Substring(movie.Director.IndexOf(" ")+1)}, {movie.Director.Substring(0,movie.Director.IndexOf(" "))}")</td>
                            <td>@movie.YearReleased</td>
                            <td>
                                <div class="btn-group w-100" role="group">
                                    <a asp-area="Admin" asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-secondary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-area="Admin" asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
            }
                </tbody>
        </table>

    </div>




</div>


